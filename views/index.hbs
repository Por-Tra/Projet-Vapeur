<!-- Section mise en avant -->
<section class="featured-section">
    <h2 class="featured-title">Jeux mis en avant</h2>
    
    {{#if jeuxMisEnAvant}}
    <div class="cards-grid">
        {{#each jeuxMisEnAvant}}
        <div class="card">
            <div class="card-image">
                <span class="badge-featured"><i class="fas fa-star"></i> En vedette</span>
            </div>
            <div class="card-body">
                <h3 class="card-title">
                    <a href="/games/{{idJeu}}">{{titre}}</a>
                </h3>
                {{#if description}}
                <p class="card-desc">{{description}}</p>
                {{/if}}
            </div>
            <div class="card-footer">
                <a href="/games/{{idJeu}}" class="btn btn-primary">Voir le jeu</a>
            </div>
        </div>
        {{/each}}
    </div>
    {{else}}
    <div class="card">
        <div class="card-body text-center">
            <p class="text-muted">Aucun jeu mis en avant pour le moment.</p>
        </div>
    </div>
    {{/if}}
</section>

