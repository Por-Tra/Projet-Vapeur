<div class="detail-container">
    <div class="detail-image"></div>
    <div class="detail-content">
        <h1 class="detail-title">{{jeu.titre}}</h1>
        
        <div class="detail-section">
            <h3>Description</h3>
            <p>{{jeu.description}}</p>
        </div>
        
        <div class="detail-section">
            <h3>Date de sortie</h3>
            <p>{{formattedDate}}</p>
        </div>

        {{#if jeu.genres.length}}
        <div class="detail-section">
            <h3>Genres</h3>
            <div class="detail-tags">
                {{#each jeu.genres}}
                    <a href="/genres/{{genre.idGenre}}/games" class="tag">{{genre.nomGenre}}</a>
                {{/each}}
            </div>
        </div>
        {{/if}}

        {{#if jeu.editeurs.length}}
        <div class="detail-section">
            <h3>Éditeurs</h3>
            <div class="detail-tags">
                {{#each jeu.editeurs}}
                    <a href="/editors/{{editeur.idEditeur}}/games" class="tag tag-green">{{editeur.nomEditeur}}</a>
                {{/each}}
            </div>
        </div>
        {{/if}}

        <div class="detail-actions">
            <a href="/edit-game?id={{jeu.idJeu}}" class="btn btn-secondary">Modifier ce jeu</a>
            <a href="/games" class="btn btn-ghost">← Retour à la liste</a>
        </div>
    </div>
</div>
