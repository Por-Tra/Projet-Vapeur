<div class="page-title">
    <h1>Catalogue des jeux</h1>
    <a href="/add-game" class="btn btn-primary">+ Ajouter un jeu</a>
</div>

<div class="cards-grid cards-grid-wide">
    {{#if games}}
        {{#each games}}
            <div class="card">
                <div class="card-image">
                    {{#if misEnAvant}}
                    <span class="badge-featured"><i class="fas fa-star"></i> En vedette</span>
                    {{/if}}
                </div>
                <div class="card-body">
                    <h3 class="card-title">
                        <a href="/games/{{idJeu}}">{{titre}}</a>
                    </h3>
                    
                    {{#if description}}
                    <p class="card-desc">{{description}}</p>
                    {{/if}}
                    
                    <p class="text-muted mb-1"><strong>Sortie :</strong> {{dateDeSortie}}</p>

                    <div class="card-meta">
                        {{#each genres}}
                            <a href="/genres/{{genre.idGenre}}/games" class="tag">{{genre.nomGenre}}</a>
                        {{/each}}
                    </div>
                    
                    <div class="card-meta">
                        {{#each editeurs}}
                            <a href="/editors/{{editeur.idEditeur}}/games" class="tag tag-green">{{editeur.nomEditeur}}</a>
                        {{/each}}
                    </div>
                </div>
                <div class="card-footer">
                    <a href="/edit-game?id={{idJeu}}" class="btn btn-secondary">Modifier</a>
                    <a href="/delete-game?id={{idJeu}}" class="btn btn-danger" onclick="return confirm('Supprimer ce jeu ?')">Supprimer</a>
                </div>
            </div>
        {{/each}}
    {{else}}
        <div class="card">
            <div class="card-body text-center">
                <p class="text-muted">Aucun jeu trouvé.</p>
                <a href="/add-game" class="btn btn-primary mt-2">Ajouter votre premier jeu</a>
            </div>
        </div>
    {{/if}}
</div>

<div class="mt-3">
    <a href="/" class="btn btn-ghost">← Retour à l'accueil</a>
</div>
