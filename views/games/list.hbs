<h1>Liste des jeux</h1>

<a href="/add-game">Ajouter un nouveau jeu</a>

<div>
    {{#if games}}
        {{#each games}}
            <div>
                <h2><a href="/games/{{idJeu}}">{{titre}}</a></h2>
                <p><strong>Description :</strong> {{description}}</p>
                <p><strong>Date de sortie :</strong> {{dateDeSortie}}</p>
                
                {{#if misEnAvant}}
                    <p><strong>Mis en avant</strong></p>
                {{/if}}

                <p><strong>Genres :</strong></p>
                <ul>
                    {{#each genres}}
                        <li><a href="/genres/{{genre.idGenre}}/games">{{genre.nomGenre}}</a></li>
                    {{/each}}
                </ul>

                <p><strong>Éditeurs :</strong></p>
                <ul>
                    {{#each editeurs}}
                        <li><a href="/editors/{{editeur.idEditeur}}/games">{{editeur.nomEditeur}}</a></li>
                    {{/each}}
                </ul>

                {{!-- Ajouter le bouton supprimer --}}
                <button onclick="location.href='/delete-game?id={{idJeu}}'">Supprimer le jeu</button>

                {{!-- Ajouter le bouton modifier --}}
                <button onclick="location.href='/edit-game?id={{idJeu}}'">Modifier le jeu</button>
            </div>
        {{/each}}
    {{else}}
        <p>Aucun jeu trouvé.</p>
    {{/if}}
</div>

<a href="/">Retour à l'accueil</a>
