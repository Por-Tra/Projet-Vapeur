<h1>Modifier un jeu</h1>

<form action="/edit-game" method="POST">
    <input type="hidden" name="id" value="{{jeu.idJeu}}" />
    
    <div>
        <label for="titre">Titre :</label>
        <input type="text" id="titre" name="titre" value="{{jeu.titre}}" required />
    </div>

    <div>
        <label for="description">Description :</label>
        <textarea id="description" name="description" required>{{jeu.description}}</textarea>
    </div>

    <div>
        <label for="dateDeSortie">Date de sortie :</label>
        <input type="date" id="dateDeSortie" name="dateDeSortie" value="{{jeu.dateDeSortie}}" />
    </div>

    <div>
        <label>Genres :</label>
        {{#each genres}}
            <div>
                <input type="checkbox" id="genre-{{idGenre}}" name="genres" value="{{idGenre}}" 
                    {{#if (lookup ../selectedGenres idGenre)}}checked{{/if}} />
                <label for="genre-{{idGenre}}">{{nomGenre}}</label>
            </div>
        {{/each}}
    </div>

    <div>
        <label>Éditeurs :</label>
        {{#each editeurs}}
            <div>
                <input type="checkbox" id="editeur-{{idEditeur}}" name="editeurs" value="{{idEditeur}}" 
                    {{#if (lookup ../selectedEditeurs idEditeur)}}checked{{/if}} />
                <label for="editeur-{{idEditeur}}">{{nomEditeur}}</label>
            </div>
        {{/each}}
    </div>

    <div>
        <input type="checkbox" id="misEnAvant" name="misEnAvant" {{#if jeu.misEnAvant}}checked{{/if}} />
        <label for="misEnAvant">Mettre en avant</label>
    </div>

    <button type="submit">Modifier le jeu</button>
</form>

<a href="/games">Retour à la liste</a>
