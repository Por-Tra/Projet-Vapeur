<div class="page-title">
    <h1>Ajouter un jeu</h1>
</div>

<div class="form-container">
    <form action="/add-game" method="POST">
        <div class="form-group">
            <label for="titre" class="form-label">Titre</label>
            <input type="text" id="titre" name="titre" class="form-input" placeholder="Nom du jeu..." required />
        </div>

        <div class="form-group">
            <label for="description" class="form-label">Description</label>
            <textarea id="description" name="description" class="form-textarea" placeholder="Décrivez le jeu..." required></textarea>
        </div>

        <div class="form-group">
            <label for="dateDeSortie" class="form-label">Date de sortie</label>
            <input type="date" id="dateDeSortie" name="dateDeSortie" class="form-input" />
        </div>

        <div class="form-group">
            <label class="form-label">Genres</label>
            <div class="cards-grid" style="grid-template-columns: repeat(auto-fill, minmax(150px, 1fr)); gap: 0.5rem;">
                {{#each genres}}
                    <label class="form-checkbox">
                        <input type="checkbox" id="genre-{{idGenre}}" name="genres" value="{{idGenre}}" />
                        <span>{{nomGenre}}</span>
                    </label>
                {{/each}}
            </div>
        </div>

        <div class="form-group">
            <label class="form-label">Éditeurs</label>
            <div class="cards-grid" style="grid-template-columns: repeat(auto-fill, minmax(150px, 1fr)); gap: 0.5rem;">
                {{#each editeurs}}
                    <label class="form-checkbox">
                        <input type="checkbox" id="editeur-{{idEditeur}}" name="editeurs" value="{{idEditeur}}" />
                        <span>{{nomEditeur}}</span>
                    </label>
                {{/each}}
            </div>
        </div>

        <div class="form-group">
            <label class="form-checkbox">
                <input type="checkbox" id="misEnAvant" name="misEnAvant" />
                <span>Mettre en avant sur la page d'accueil</span>
            </label>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Ajouter le jeu</button>
            <a href="/games" class="btn btn-ghost">Annuler</a>
        </div>
    </form>
</div>
