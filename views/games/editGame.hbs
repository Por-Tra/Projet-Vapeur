<div class="page-title">
    <h1>Modifier un jeu</h1>
</div>

<div class="form-container">
    <form action="/edit-game" method="POST">
        <input type="hidden" name="id" value="{{jeu.idJeu}}" />
        
        <div class="form-group">
            <label for="titre" class="form-label">Titre</label>
            <input type="text" id="titre" name="titre" class="form-input" value="{{jeu.titre}}" required />
        </div>

        <div class="form-group">
            <label for="description" class="form-label">Description</label>
            <textarea id="description" name="description" class="form-textarea" required>{{jeu.description}}</textarea>
        </div>

        <div class="form-group">
            <label for="dateDeSortie" class="form-label">Date de sortie</label>
            <input type="date" id="dateDeSortie" name="dateDeSortie" class="form-input" value="{{formattedDateDeSortie}}" />
        </div>

        <div class="form-group">
            <label class="form-label">Genres</label>
            <div class="cards-grid" style="grid-template-columns: repeat(auto-fill, minmax(150px, 1fr)); gap: 0.5rem;">
                {{#each genres}}
                    <label class="form-checkbox">
                        <input type="checkbox" id="genre-{{idGenre}}" name="genres" value="{{idGenre}}" 
                            {{#if (includes ../selectedGenres idGenre)}}checked{{/if}} />
                        <span>{{nomGenre}}</span>
                    </label>
                {{/each}}
            </div>
        </div>

        <div class="form-group">
            <label class="form-label">Ã‰diteurs</label>
            <div class="cards-grid" style="grid-template-columns: repeat(auto-fill, minmax(150px, 1fr)); gap: 0.5rem;">
                {{#each editeurs}}
                    <label class="form-checkbox">
                        <input type="checkbox" id="editeur-{{idEditeur}}" name="editeurs" value="{{idEditeur}}" 
                            {{#if (includes ../selectedEditeurs idEditeur)}}checked{{/if}} />
                        <span>{{nomEditeur}}</span>
                    </label>
                {{/each}}
            </div>
        </div>

        <div class="form-group">
            <label class="form-checkbox">
                <input type="checkbox" id="misEnAvant" name="misEnAvant" {{#if jeu.misEnAvant}}checked{{/if}} />
                <span>Mettre en avant sur la page d'accueil</span>
            </label>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Enregistrer les modifications</button>
            <a href="/games" class="btn btn-ghost">Annuler</a>
        </div>
    </form>
</div>
