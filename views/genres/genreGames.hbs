<div class="page-title">
    <h1>Genre : <span class="text-accent">{{genre.nomGenre}}</span></h1>
</div>

{{#if jeux.length}}
<div class="cards-grid">
    {{#each jeux}}
        <div class="card">
            <div class="card-image"></div>
            <div class="card-body">
                <h3 class="card-title">
                    <a href="/games/{{idJeu}}">{{titre}}</a>
                </h3>
                {{#if description}}
                <p class="card-desc">{{description}}</p>
                {{/if}}
                <p class="text-muted"><strong>Sortie :</strong> {{dateDeSortie}}</p>

                {{#if editeurs.length}}
                <div class="card-meta">
                    {{#each editeurs}}
                        <a href="/editors/{{editeur.idEditeur}}/games" class="tag tag-green">{{editeur.nomEditeur}}</a>
                    {{/each}}
                </div>
                {{/if}}

                {{#if genres.length}}
                <div class="card-meta">
                    {{#each genres}}
                        <a href="/genres/{{genre.idGenre}}/games" class="tag">{{genre.nomGenre}}</a>
                    {{/each}}
                </div>
                {{/if}}
            </div>
            <div class="card-footer">
                <a href="/games/{{idJeu}}" class="btn btn-primary">Voir le jeu</a>
            </div>
        </div>
    {{/each}}
</div>
{{else}}
<div class="card">
    <div class="card-body text-center">
        <p class="text-muted">Aucun jeu n'est encore associé à ce genre.</p>
    </div>
</div>
{{/if}}

<div class="mt-3">
    <a href="/genres" class="btn btn-ghost">← Retour aux genres</a>
</div>
