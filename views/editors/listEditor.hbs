<div class="page-title">
    <h1>Éditeurs</h1>
    <a href="/add-editor" class="btn btn-primary">+ Ajouter un éditeur</a>
</div>

<div class="cards-grid">
    {{#if editeurs}}
        {{#each editeurs}}
            <div class="card">
                <div class="card-body">
                    <h3 class="card-title">
                        <a href="/editors/{{idEditeur}}/games">{{nomEditeur}}</a>
                    </h3>
                    
                    <p class="text-muted mb-1"><strong>Jeux publiés :</strong></p>
                    
                    {{#if jeux}}
                        <div class="card-meta">
                            {{#each jeux}}
                                <a href="/games/{{jeu.idJeu}}" class="tag">{{jeu.titre}}</a>
                            {{/each}}
                        </div>
                    {{else}}
                        <p class="text-muted">Aucun jeu publié</p>
                    {{/if}}
                </div>
                <div class="card-footer">
                    <a href="/editors/{{idEditeur}}/games" class="btn btn-secondary">Voir les jeux</a>
                    <a href="/edit-editor?id={{idEditeur}}" class="btn btn-ghost">Modifier</a>
                    <a href="/delete-editor?id={{idEditeur}}" class="btn btn-danger" onclick="return confirm('Supprimer cet éditeur ?')">×</a>
                </div>
            </div>
        {{/each}}
    {{else}}
        <div class="card">
            <div class="card-body text-center">
                <p class="text-muted">Aucun éditeur trouvé.</p>
                <a href="/add-editor" class="btn btn-primary mt-2">Ajouter votre premier éditeur</a>
            </div>
        </div>
    {{/if}}
</div>

<div class="mt-3">
    <a href="/" class="btn btn-ghost">← Retour à l'accueil</a>
</div>